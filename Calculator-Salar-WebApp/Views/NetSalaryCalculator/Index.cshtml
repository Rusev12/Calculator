@model NetSalaryCalculator


<div class="container" style="padding-top:80px;">
    <h1 style="color:darkgoldenrod; text-align:center"><b>Calculator salary</b></h1>
    <p style="color:darkgrey; text-align:center">Salary calculator.</p>
    <br />
    <form asp-controller="NetSalaryCalculator" asp-action="Index" method="post" role="form" style="color:darkgoldenrod; text-align:center" class="form-inline">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <input asp-for="GrossSalary" type="number" class="form-control" placeholder="Introduceti salariul brut" />
            @*<span asp-validation-for="SalarBrut" class="text-danger"></span>*@
        </div>

        <div class="form-group">
            <input asp-for="CharityTaxes" type="number" class="form-control" placeholder="Money for charity" />
            @*<span asp-validation-for="SalarBrut" class="text-danger"></span>*@
        </div>
        <button type="submit" class="btn btn-warning">Calculate</button>
    </form>    
</div>

